@page "/countries/details/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Country Details</h3>

@if (country == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@country.Name (@country.Code)</h5>
            <p>
                <strong>Name:</strong> @country.Name
            </p>
            <p>
                <strong>Code:</strong> @country.Code
            </p>
        </div>
    </div>
    <button class="btn btn-secondary mt-3" @onclick="GoBack">Back</button>
}

@code {
    [Parameter] public int Id { get; set; }
    private BlazorTodo.WebUI.Models.Country? country;

    protected override async Task OnInitializedAsync()
    {
        country = await Http.GetFromJsonAsync<BlazorTodo.WebUI.Models.Country>($"api/countries/{Id}");
    }

    private void GoBack()
    {
        Nav.NavigateTo("/countries");
    }
}
@page "/todos/delete/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Hapus Todo</h3>

<p>Apakah Anda yakin ingin menghapus todo ini?</p>
<button @onclick="Delete">Ya</button>
<button @onclick="() => Nav.NavigateTo("/todos")">Tidak</button>

@code {
    [Parameter] public int Id { get; set; }

    private async Task Delete()
    {
        await Http.DeleteAsync($"api/todos/{Id}");
        Nav.NavigateTo("/todos");
    }
}

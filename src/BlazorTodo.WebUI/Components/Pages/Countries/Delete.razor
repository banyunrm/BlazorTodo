@page "/countries/delete/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Delete Country</h3>

@if (country == null)
{
    <p>Loading...</p>
}
else
{
    <div class="alert alert-warning">
        <h4>Are you sure you want to delete?</h4>
        <p><strong>@country.Name (@country.Code)</strong></p>
    </div>
    <button class="btn btn-danger" @onclick="OnDelete">Delete</button>
    <button class="btn btn-secondary" @onclick="GoBack">Cancel</button>
}

@code {
    [Parameter] public int Id { get; set; }
    private BlazorTodo.WebUI.Models.Country? country;

    protected override async Task OnInitializedAsync()
    {
        country = await Http.GetFromJsonAsync<BlazorTodo.WebUI.Models.Country>($"api/countries/{Id}");
    }

    private async Task OnDelete()
    {
        await Http.DeleteAsync($"api/countries/{Id}");
        Nav.NavigateTo("/countries");
    }

    private void GoBack()
    {
        Nav.NavigateTo("/countries");
    }
}
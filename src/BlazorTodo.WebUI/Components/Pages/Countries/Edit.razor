@page "/countries/edit/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Edit Country</h3>

@if (country == null)
{
    <p>Loading...</p>
}
else
{
    <input @bind="country.Name" />
    <input @bind="country.Code" />
    <button @onclick="Update">Update</button>
}

@code {
    [Parameter] public int Id { get; set; }
    private BlazorTodoApp.Models.Country? country;

    protected override async Task OnInitializedAsync()
    {
        country = await Http.GetFromJsonAsync<BlazorTodoApp.Models.Country>($"api/countries/{Id}");
    }

    private async Task Update()
    {
        await Http.PutAsJsonAsync($"api/countries/{Id}", country);
        Nav.NavigateTo("/countries");
    }
}

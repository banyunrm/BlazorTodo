@page "/countries"
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Countries List</h3>

<button class="btn btn-success mb-3" @onclick="GoToCreate">Add Country</button>

@if (countries == null)
{
    <p>Loading...</p>
}
else if (!countries.Any())
{
    <p>No countries found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in countries)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>@country.Code</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="/countries/details/@country.Id">Details</a>
                        <a class="btn btn-warning btn-sm" href="/countries/edit/@country.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/countries/delete/@country.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BlazorTodo.WebUI.Models.Country>? countries;

    protected override async Task OnInitializedAsync()
    {
        countries = await Http.GetFromJsonAsync<List<BlazorTodo.WebUI.Models.Country>>("api/countries");
    }

    private void GoToCreate()
    {
        Nav.NavigateTo("/countries/create");
    }
}